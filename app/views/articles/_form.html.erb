<% if @article.errors.any? %>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li style="color:red"><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @article do |f| %>
    <p>
        <%= f.label :Title %>
        <br>
        <%= f.text_field :title %>
    </p>
     <p>
        <%= f.label :Description %>
        <br>
        <%= f.text_area :description %>
    </p>
    <%= f.submit "Submit" %>
<% end %>

<%= link_to "Back", articles_path%>