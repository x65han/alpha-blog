<h2 align="center"><%= @article.title %></h1>
<div class="well col-xs-8 col-xs-offset-2">
    <p><%= simple_format(@article.description) %></p>
    <div class="article-actions row">
        <div class="col-xs-12">
            <%= render 'shared/author', obj: @article %>
        </div>
        <div class="col-xs-12" style="margin-top:20px">
            <hr style="border-color:black;margin-bottom:10px;margin-top:0px">
                <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-warning-outline" %>
            <% if logged_in? && (current_user == @article.user || current_user.admin?) %>
                <%= link_to "Edit this article", edit_article_path(@article),class: "btn btn-xs btn-success-outline" %>
                <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger-outline" %>
            <% end %>
        </div>
    </div>
</div>
