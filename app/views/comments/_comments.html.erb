<h3>Comments</h3>
<% @post.comments.each do |comment| %>
    <div class="well">
        <p>
            <%= link_to '[X]', [comment.post, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
            <strong><%=comment.username %></strong>: <%= comment.body%>
        </p>
    </div>
<% end %>
