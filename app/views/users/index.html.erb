<h1 align="center">All Bloggers</h1>
<%= render 'shared/pagination' %>
<% @users.each do |user| %>
    <div class="row">
        <div class="well col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
            <%= link_to gravatar_for(user, size: 30), user_path(user) %>
            <%= link_to user.username, user_path(user)%>
            <% if logged_in? and current_user.admin? %>
                &nbsp;
                <%= link_to "X", user_path(user), style: "color:red", method: :delete, data: {confirm: "Are you sure you want to delete the user and all associated articles?"} %>
            <% end %>
            <span style="float:right;margin-top:7px" class="bubble-primary bubble-wide"><%= pluralize(user.articles.count, "article") if user.articles %></span>
        </div>
    </div>
<% end %>
<%= render 'shared/pagination' %>
