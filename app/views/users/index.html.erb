<h1 align="center">All Bloggers</h1>
<div align="center"><%= will_paginate @users %></div>
<% @users.each do |user| %>
    <div class="row">
        <div class="well col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4">
            <%= link_to gravatar_for(user, size: 30), user_path(user) %>
            <%= link_to user.username, user_path(user)%>
            <span style="float:right" class="bubble-primary bubble-wide"><%= pluralize(user.articles.count, "article") if user.articles %></span>
        </div>
    </div>
<% end %>
<div align="center"><%= will_paginate @users %></div>
